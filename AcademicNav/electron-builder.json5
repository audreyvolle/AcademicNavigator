/**
 * @see https://www.electron.build/configuration/configuration
 */
{
  "appId": "T3AM.academicnav",
  "productName": "AcademicNav",
  "asar": true,
  "directories": {
    "output": "release/${0.0.1}"
  },
  "files": [
    "dist-electron",
    "dist"
  ],
  "mac": {
    "artifactName": "${productName}_${0.0.1}.${ext}",
    "target": [
      "dmg"
    ],
    "icon": "./public/academicNavIcon.icns"
  },
  "win": {
    "target": [
      {
        "target": "nsis",
        "arch": [
          "x64"
        ]
      }
    ],
    "artifactName": "${productName}_${0.0.1}.${ext}",
    "icon": "./public/academicNavIcon.png"
  },
  "nsis": {
    "oneClick": false,
    "perMachine": false,
    "allowToChangeInstallationDirectory": true,
    "deleteAppDataOnUninstall": false
  }
}
